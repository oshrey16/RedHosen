pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:10-alpine' 
                    args '-p 3000:3000'
                }
            }
            steps {
                sh 'npm install'
                //RUN apk update && apk upgrade &&
                //apk add --no-cache git
                echo 'finished build'
            }
        }
    }
}